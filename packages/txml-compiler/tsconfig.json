{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "useDefineForClassFields": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["lib", "test"]
}
